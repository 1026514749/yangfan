<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sjmcrf.yangfan.dao.EmployeeDao">


	<select id="get" resultType="Employee" parameterType="String">
		SELECT *
		FROM `Employee`
		where id = #{id}
	</select>

	<update id="delete" parameterType="String">
		UPDATE `Employee`
		SET 
		deleted = 1
		where id = #{id}
	</update>
	
    <insert id="insert" parameterType="Employee" useGeneratedKeys="true" keyProperty="id">
        insert into 
        	`Employee`(position,name,image,phone,`time`,`order`,deleted)
        	values(#{position},#{name},#{image},#{phone},#{time},#{order},#{deleted})
    </insert>
    
    <select id="queryByPage" resultType="java.util.Map" >
		SELECT *
		FROM `Employee` t
		WHERE t.deleted = 0
		ORDER BY t.order,t.code
		LIMIT #{pageIndex},#{pageSize}
	</select>
	
	<select id="queryAll" resultType="Employee" >
		SELECT *
		FROM `Employee` t
		WHERE t.deleted = 0
		ORDER BY t.order,t.code
	</select>
	
	<select id="getCount" resultType="Integer">
		SELECT COUNT(*)
		FROM `Employee`
		WHERE deleted = 0
	</select>
	
	<update id="update" parameterType="Employee">
		update `Employee` 
			set position=#{position},
				name=#{name},
				image=#{image},
				phone=#{phone},
				`time`=#{time},
				`order`=#{order}
		where id = #{id}
	</update>

</mapper>